<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Adress</th>
      <th>City</th>
      <th>Post Code</th>
      <th>Email</th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.adress %></td>
        <td><%= user.city %></td>
        <td><%= user.post_code %></td>
        <td><%= user.email %></td>
        <% if current_user.try(:admin?) %>
        <td><%= link_to 'Edit User profile', edit_user_path(user.id) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
