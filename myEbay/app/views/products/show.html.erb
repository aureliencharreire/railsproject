
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                <div class="col-md-4">
                    <%= image_tag "/assets/images/products/#{@product.id}/#{@product.image_filename}" if @product.image_filename? %>
                </div>

                <div class="star-rating" data-score= <%= @avg_review %> ></div>
                <em> <%= "#{@reviews.length} reviews" %> </em>
                <p><%= @avg_review %></p>

                <div class="table-responsive">

                    <table class="table">
                        <tbody>
                            <tr>
                                <td><strong>Title:</strong></td>
                                <td><%= @product.title %></td>
                            </tr>
                            <tr>
                                <td><strong>Description:</strong></td>
                                <td><%= @product.description %></td>
                            </tr>
                            <tr>
                                <td><strong>Price:</strong></td>
                                <td><%= @product.price %></td>
                            </tr>
                        </tbody>
                    </table>
                    <%= link_to "Leave a comment", new_product_review_path(@product) %>

                </div>
            </div>
            <div class="col-md-7 offset-md1">
                <% if @reviews.blank? %>
                <h2>Be the first to add a comment ! </h2>
                <%= link_to "Leave a comment", new_product_review_path(@product) %>
                <% else %>
                <div class="rev">
                    <% @reviews.each do | r , i | %>
                    <div class="star-rating" data-score= <%= r.rating %> ></div>
                    <p><%= r.comment %></p>
                    <% end %>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</div>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>

<script>
    $('.star-rating').raty({
        path: '/assets/',
        readOnly: true,
        score: function(){
            return $(this).attr('data-score');
        }
    });
</script>
